<body style="background-color: white;background-image: url(https://media.istockphoto.com/vectors/herbs-and-spices-seamless-pattern-ginger-spinach-onion-pepper-garlic-vector-id1258733624?k=20&m=1258733624&s=612x612&w=0&h=O1jNq06ugDRlw6I_RQwnh_79gFwYTXihoB7_Lptdxfs=); font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body" style="background-color: #5A5757;">
      <h1 class="text-center mb-3" style="color: azure; font-size: 45px;">
        <i strclass="fas fa-user-plus"></i><u> Register
        </u>
        </h1>
      <% include ./partials/messages %>
      <form action="/users/register" method="POST" style="color: azure;">
        <div class="form-group">
          <label for="name"><b>Name</b></label>
          <input
            type="name"
            id="name"
            name="name"
            class="form-control"
            placeholder="Enter Name"
            value="<%= typeof name != 'undefined' ? name : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="email"><b>Email</b></label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
            value="<%= typeof email != 'undefined' ? email : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password"><b>Password</b></label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Create Password"
            value="<%= typeof password != 'undefined' ? password : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password2"><b>Confirm Password</b></label>
          <input
            type="password"
            id="password2"
            name="password2"
            class="form-control"
            placeholder="Confirm Password"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block" style="font-size: large;">
          <b>
          Register
        </b>
        </button>
      </form>
      <p class="lead mt-4" style="color: azure;"><b>Already have an account? <a href="/users/login" style="font-size:larger;">Login</b></a></p>
    </div>
  </div>
</div>
</body>
